<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imgDogAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/skyblueee" />

    <TextView
        android:text="Thousandway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/breedText"
        android:textSize="18sp"
        android:layout_marginBottom="23dp"
        android:layout_alignBottom="@+id/imgDogAccount"
        android:layout_alignLeft="@+id/nameDogAccount"
        android:layout_alignStart="@+id/nameDogAccount" />

    <TextView
        android:id="@+id/nameDogAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30sp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:layout_alignBottom="@+id/breedText"
        android:layout_toRightOf="@+id/imgDogAccount"
        android:layout_toEndOf="@+id/imgDogAccount"
        android:textStyle="normal|bold" />

