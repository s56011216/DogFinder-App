<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_dog_add_infor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.siriporn.dogfindertest.DogAddInfoActivity"
    tools:showIn="@layout/activity_dog_add_info">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="185dp"
            android:layout_height="148dp"
            app:srcCompat="@drawable/camera2"
            android:id="@+id/imageView2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="73dp"
            app:srcCompat="@drawable/arrowpic"
            android:id="@+id/imageButton7"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="73dp"
            app:srcCompat="@drawable/arrowpicleft"
            android:id="@+id/imageButton8"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintRight_toLeftOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nameText"
            android:text="name"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp" />

        <TextView
            android:layout_width="186dp"
            android:layout_height="48dp"
            android:ems="10"
            android:id="@+id/breedText"
            android:textAlignment="center"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nameText"
            app:layout_constraintLeft_toLeftOf="@+id/nameText"
            app:layout_constraintHorizontal_bias="0.0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Noticeable"
            android:ems="10"
            android:id="@+id/noticeText"
            android:textAlignment="center"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/breedText" />

        <ImageButton
            android:layout_width="42dp"
            android:layout_height="43dp"
            app:srcCompat="@android:drawable/ic_menu_search"
            android:id="@+id/imageButton9"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/breedText"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/breedText"
            android:background="@drawable/oval"
            android:onClick="searchClicked"
            app:layout_constraintHorizontal_bias="0.2" />

        <ImageView
            android:layout_width="336dp"
            app:srcCompat="@drawable/location"
            tools:layout_editor_absoluteX="8dp"
            android:id="@+id/AddLoc"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/cast_expanded_controller_seek_bar_progress_background_tint_color"
            android:layout_marginBottom="8dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/noticeText" />

        <Button
            android:text="Next"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:id="@+id/acceptdog"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorPrimary"
            android:onClick="nextClicked"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

    </android.support.constraint.ConstraintLayout>
</RelativeLayout>
