<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp">

        <ImageView
            android:id="@+id/lostUserPicPost"
            android:layout_width="69dp"
            android:layout_height="62dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/crop_square_36"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/nameFB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@+id/lostUserPicPost"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/lostUserPicPost"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/foundDatePost"
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/nameFB"
            app:layout_constraintLeft_toLeftOf="@+id/nameFB" />

        <TextView
            android:id="@+id/nameLostPost"
            android:text="name : (name)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/lostUserPicPost"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lostUserPicPost"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:id="@+id/picLostPost"
            android:layout_width="379dp"
            android:layout_height="221dp"
            app:srcCompat="@color/wallet_bright_foreground_disabled_holo_light"
            app:layout_constraintTop_toBottomOf="@+id/noticeFoundPost"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:background="@color/cast_intro_overlay_button_background_color"
            app:layout_constraintLeft_toLeftOf="@+id/noticeFoundPost"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/breedLostPost"
            android:text="breed : (breed)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/nameLostPost"
            app:layout_constraintTop_toBottomOf="@+id/nameLostPost"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/noticeFoundPost"
            android:text="noticeable : (notice)"
            android:layout_width="370dp"
            android:layout_height="26dp"
            app:layout_constraintLeft_toLeftOf="@+id/breedLostPost"
            app:layout_constraintTop_toBottomOf="@+id/breedLostPost"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>