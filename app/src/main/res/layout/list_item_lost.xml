<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp">

        <ImageView
            android:id="@+id/lostUserPicPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@drawable/crop_square_36"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameFB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            app:layout_constraintTop_toTopOf="@+id/lostUserPicPost"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@+id/lostUserPicPost"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/lostDatePost"
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/nameFB"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@+id/nameFB" />

        <TextView
            android:id="@+id/nameLostPost"
            android:text="name : (name)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/lostUserPicPost"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lostUserPicPost"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:id="@+id/picLostPost"
            android:layout_width="327dp"
            android:layout_height="200dp"
            app:srcCompat="@color/wallet_bright_foreground_disabled_holo_light"
            app:layout_constraintTop_toBottomOf="@+id/noticeLostPost"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:background="@color/cast_intro_overlay_button_background_color"
            app:layout_constraintLeft_toLeftOf="@+id/noticeLostPost"
            app:layout_constraintHorizontal_bias="0.06" />

        <TextView
            android:id="@+id/breedLostPost"
            android:text="breed : (breed)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/nameLostPost"
            app:layout_constraintTop_toBottomOf="@+id/nameLostPost"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/noticeLostPost"
            android:text="noticeable : (notice)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/breedLostPost"
            app:layout_constraintTop_toBottomOf="@+id/breedLostPost"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/leftChangeLost"
            android:layout_width="47dp"
            android:layout_height="69dp"
            app:srcCompat="@drawable/arrowpic"
            app:layout_constraintRight_toRightOf="@+id/picLostPost"
            app:layout_constraintTop_toTopOf="@+id/picLostPost"
            app:layout_constraintBottom_toBottomOf="@+id/picLostPost" />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>