<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/lostUserPicWritePost"
            android:layout_width="69dp"
            android:layout_height="62dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/crop_square_36"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/nameFB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@+id/lostUserPicWritePost"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/lostUserPicWritePost"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/foundDatePost"
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/nameFB"
            app:layout_constraintLeft_toLeftOf="@+id/nameFB" />

        <TextView
            android:id="@+id/nameLostPost"
            android:text="name : (name)"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lostUserPicWritePost"
            app:layout_constraintLeft_toRightOf="@+id/textView8"
            android:paddingLeft="20dp" />

        <ImageView
            android:id="@+id/picLostPost"
            android:layout_width="423dp"
            android:layout_height="266dp"
            app:srcCompat="@color/wallet_bright_foreground_disabled_holo_light"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@+id/NotePost"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/breedLostPost"
            android:text="breed : (breed)"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/nameLostPost"
            app:layout_constraintLeft_toRightOf="@+id/textView10"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/noticeDog"
            android:text="noticeable : (notice)"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/breedLostPost"
            app:layout_constraintLeft_toRightOf="@+id/textView11" />

        <TextView
            android:text="Name :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            app:layout_constraintLeft_toLeftOf="@+id/lostUserPicWritePost"
            app:layout_constraintTop_toTopOf="@+id/nameLostPost"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Breed :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/breedLostPost"
            app:layout_constraintLeft_toLeftOf="@+id/textView8"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Noticeable :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/noticeDog"
            app:layout_constraintLeft_toLeftOf="@+id/textView10"
            android:textStyle="normal|bold" />

        <TextView
            android:text="NotePost"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/NotePost"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/noticeDog"
            app:layout_constraintLeft_toLeftOf="@+id/textView11"
            android:layout_marginTop="8dp" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>