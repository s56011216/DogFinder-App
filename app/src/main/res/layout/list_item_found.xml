<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp">

        <ImageView
            android:id="@+id/foundUserPicPost"
            android:layout_width="58dp"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/com_facebook_profile_picture_blank_square"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/nameFB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            app:layout_constraintTop_toTopOf="@+id/foundUserPicPost"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@+id/foundUserPicPost"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/foundDatePost"
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/nameFB"
            app:layout_constraintLeft_toLeftOf="@+id/nameFB" />

        <TextView
            android:id="@+id/nameFoundPost"
            android:text="name : (name)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/foundUserPicPost"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/foundUserPicPost" />

        <ImageView
            android:id="@+id/picFoundPost"
            android:layout_width="351dp"
            android:layout_height="200dp"
            app:srcCompat="@color/wallet_bright_foreground_disabled_holo_light"
            app:layout_constraintTop_toBottomOf="@+id/noticeFoundPost"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:background="@color/cast_intro_overlay_button_background_color"
            app:layout_constraintLeft_toLeftOf="@+id/breedFoundPost"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/breedFoundPost"
            android:text="breed : (breed)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/nameFoundPost"
            app:layout_constraintTop_toBottomOf="@+id/nameFoundPost"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/noticeFoundPost"
            android:text="noticeable : (notice)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/breedFoundPost"
            app:layout_constraintTop_toBottomOf="@+id/breedFoundPost"
            android:textSize="12sp" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>