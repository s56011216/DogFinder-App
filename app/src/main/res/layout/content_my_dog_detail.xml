<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_my_dog_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.siriporn.dogfindertest.MyDogDetail"
    tools:showIn="@layout/activity_my_dog_detail">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="185dp"
            android:layout_height="148dp"
            app:srcCompat="@drawable/camera2"
            android:id="@+id/imageMyDog"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintHorizontal_bias="0.52" />

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="73dp"
            app:srcCompat="@drawable/arrowpic"
            android:id="@+id/ButtonRight"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toRightOf="@+id/imageMyDog"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="73dp"
            app:srcCompat="@drawable/arrowpicleft"
            android:id="@+id/imageButtonLeft"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintRight_toLeftOf="@+id/imageMyDog"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nameText2"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/imageMyDog"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:background="@color/com_facebook_button_background_color_pressed"
            android:padding="10dp"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.56"
            android:textStyle="normal|bold"
            android:textColor="@color/cast_expanded_controller_text_color" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/breedText2"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/nameText2"
            app:layout_constraintLeft_toLeftOf="@+id/nameText2"
            android:padding="5dp"
            android:background="@color/com_facebook_button_background_color_disabled"
            android:layout_marginTop="2dp"
            app:layout_constraintRight_toRightOf="@+id/nameText2" />

        <TextView
            android:text="Noticeable"
            android:layout_height="36dp"
            android:id="@+id/textView4"
            android:background="@color/com_facebook_button_background_color_focused_disabled"
            android:padding="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="138dp"
            app:layout_constraintLeft_toLeftOf="@+id/nameText2"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/breedText2" />

        <TextView
            android:text="Location"
            android:layout_height="36dp"
            android:id="@+id/textView5"
            android:textSize="12sp"
            android:background="@color/com_facebook_button_background_color_focused_disabled"
            android:textColor="@color/cardview_light_background"
            android:padding="8dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="138dp"
            app:layout_constraintRight_toRightOf="@+id/nameText2"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/breedText2" />

        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_editor_absoluteX="8dp"
            app:layout_constraintTop_toBottomOf="@+id/breedText2"/>

        <TextView
            android:layout_width="138dp"
            android:layout_height="124dp"
            android:ems="10"
            android:id="@+id/noticeText"
            android:textAlignment="center"
            android:textSize="12sp"
            android:background="@color/com_facebook_button_background_color_focused"
            app:layout_constraintLeft_toLeftOf="@+id/textView4"
            app:layout_constraintRight_toRightOf="@+id/textView4"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.0" />

        <ImageView
            android:layout_width="138dp"
            app:srcCompat="@drawable/mapbutton"
            android:id="@+id/ShowLoc"
            android:background="@color/cast_expanded_controller_ad_label_background_color"
            android:layout_height="124dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintRight_toRightOf="@+id/textView5"
            app:layout_constraintLeft_toLeftOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.0" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
