<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/foundUserPicPost"
            android:layout_width="58dp"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/com_facebook_profile_picture_blank_square"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/nameFB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/foundUserPicPost"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="@+id/foundUserPicPost" />

        <TextView
            android:id="@+id/foundDatePost"
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/nameFB"
            app:layout_constraintLeft_toLeftOf="@+id/nameFB"
            android:textColor="@color/cast_expanded_controller_background_color" />

        <ImageView
            android:id="@+id/picFoundPost"
            android:layout_width="0dp"
            android:layout_height="293dp"
            app:srcCompat="@color/wallet_bright_foreground_disabled_holo_light"
            app:layout_constraintTop_toBottomOf="@+id/noticeDog"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/wallet_bright_foreground_disabled_holo_light"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/foundUserPicPost"
            app:layout_constraintHorizontal_bias="0.0"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/noticeDog"
            android:text="noticeable : (notice)"
            android:layout_width="0dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toBottomOf="@+id/foundUserPicPost"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/cast_expanded_controller_background_color"
            app:layout_constraintHorizontal_bias="0.0" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>