<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imgDogAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/skyblueee"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/nameDogAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30sp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:layout_alignBottom="@+id/breedText"
        android:layout_toRightOf="@+id/imgDogAccount"
        android:layout_toEndOf="@+id/imgDogAccount"
        android:textStyle="normal|bold"
        android:textColor="@color/font" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/breedText"
        android:textSize="18sp"
        android:layout_marginBottom="23dp"
        android:layout_alignBottom="@+id/imgDogAccount"
        android:textColor="@color/font"
        android:layout_alignLeft="@+id/nameDogAccount"
        android:layout_alignStart="@+id/nameDogAccount" />

</RelativeLayout>